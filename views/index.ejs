                                    ....... العلماءوالدعاة
                                </h5>
                                <p></p>
                            </div>
                        </a>
                        <%for(scholar of scholars){%>
                            <div class="carousel-item">
                                <img src="<%=scholar.image%>" class="d-block w-100" style="height: 275px;" alt="...">
                                <a href="/scholar/<%=scholar._id%>" class="carousel-caption d-none d-md-block">
                                    <h5 style="
                                    background-color: black;
                                    border-radius: 44px;
                                    opacity: 0.8;
                                ">
                                        <%=scholar.name%>
                                    </h5>
                                    <p></p>
                                </a>
                            </div>
                            <%}%>
                                <a class="carousel-item">
                                    <img style="height: 275px;"
                                        src="https://img.icons8.com/external-others-bzzricon-studio/344/external-mosque-ramadan-others-bzzricon-studio-2.png"
                                        class="d-block w-100 " alt="...">
                                    <div class="carousel-caption d-none d-md-block">
                                        <h5>
                                            ....... الدروس
                                        </h5>
                                        <p></p>
                                    </div>
                                </a>
                                <%for(subject of lessons){%>
                                    <div class="carousel-item">
                                        <img src="https://img.icons8.com/external-flaticons-lineal-color-flat-icons/512/external-video-lesson-online-education-flaticons-lineal-color-flat-icons-3.png"
                                            class="d-block w-100" style="height: 275px;" alt="...">
                                        <a href="/subject/<%=subject.teacherId%>/lessons/<%=subject._id%>"
                                            class="carousel-caption d-none d-md-block">
                                            <h5 style="
                                        background-color: black;
                                        border-radius: 44px;
                                        opacity: 0.8;
                                    ">

                                            </h5>

                                            <p style="
                                            color: black;
                                            background-color: antiquewhite;
                                            border-radius: 48px;
                                        ">
