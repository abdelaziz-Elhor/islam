<%- include('parts/header.ejs')%>
    <%- include('parts/nav.ejs')%>
        <style>
            .card.text-center.text-bg-dark.mb-3 {
                max-width: 18rem;
                min-height: 181px;
                max-height: 181px;
            }

            .a {
                text-decoration: auto;
            }
        </style>


        <div class="row mt-4">
            <div class="col row">
                <h2>المقالات</h2>
                <%for(sub of data){%>
                    <a class="a col-lg-3 col-sm-6" href="/subject/<%=sub.teacherId%>/articles/<%=sub._id%>">
                        <div class="card text-center text-bg-dark mb-3" style="max-width: 18rem;">
                            <div class="card-header">
                                <%=sub.teacherName%>
                            </div>
                            <div class="card-body">
                                <h5 class="card-title">
                                    <%=sub.name%>
                                </h5>
                                <p class="card-text"><small class="text-muted">
                                        <img src="https://img.icons8.com/color/512/calendar--v1.png"
                                            style="width: 20px;">
                                        <%=sub.date%>
                                    </small></p>
                            </div>
                        </div>
                    </a>
                    <%}%>
            </div>
            <div class="col-3">
                <%- include('parts/list.ejs')%>
            </div>
        </div>

        <%- include('parts/footer.ejs')%>